<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/navy"
    android:orientation="vertical"
    tools:context="com.imaginecup.ensharp.guardear.MainLoginActivity"
    android:weightSum="100">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:weightSum="100"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_facebook"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:background="#355294"
                android:text="f 페이스북으로 로그인"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                android:onClick="facebookClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:weightSum="100"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_google"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:background="#b51010"
                android:layout_centerHorizontal="true"
                android:text="g+ 구글로 로그인"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"
                />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:weightSum="100"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/join_email"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="80"
                android:background="@color/navy_light"
                android:layout_centerHorizontal="true"
                android:text="이메일로 가입하기"
                android:textColor="@color/white"
                android:onClick="JoinEmail"
                />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_email"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@color/white"
            android:layout_alignParentBottom="true"
            android:text="이메일로 로그인"
            android:textColor="@color/black"
            android:onClick="LoginEmail"
            />
    </RelativeLayout>



</LinearLayout>
