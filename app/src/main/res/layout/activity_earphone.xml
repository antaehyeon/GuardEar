<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_earphone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    tools:context="com.imaginecup.ensharp.guardear.EarphoneActivity"
    android:weightSum="100">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="@color/navy">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="80">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPersonName"
                android:hint="@string/searchEar"
                android:id="@+id/etSearch"
                android:textColor="@color/white"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20">
            <ImageButton
                android:textColor="@color/skyblue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="getItem"
                android:layout_alignParentEnd="true"
                android:id="@+id/btnSearch"
                android:background="@drawable/search"/>
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="85"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="88">
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="90"
                android:id="@+id/listViewToDo"
                tools:listitem="@layout/row_earphone"
                android:dividerHeight="0.4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center">
            <Button
                android:text="@string/btn_Next"
                android:textColor="#ffffff"
                android:background="@null"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/btn_Next"
                android:onClick="NextClick"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
